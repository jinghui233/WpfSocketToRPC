<Window x:Class="SocketServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="IP:" HorizontalAlignment="Left" Margin="65,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIP" Text="127.0.0.1" HorizontalAlignment="Left" Margin="94,23,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="235,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPort" Text="5000" HorizontalAlignment="Left" Margin="280,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Listen" HorizontalAlignment="Left" Margin="443,23,0,0" VerticalAlignment="Top" Click="btnListen_Click"/>
        <RichTextBox x:Name="richtxtLog" Height="363" VerticalAlignment="Top" Margin="0,72,0,0">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
